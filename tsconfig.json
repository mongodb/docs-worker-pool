{
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "./build",
    "target": "es6",
    "module": "commonjs",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "baseUrl": "./types",
    "sourceMap": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts", "api/**/*.ts"],
  "exclude": ["modules", "node_modules", "tests/**/*.ts"]
}
